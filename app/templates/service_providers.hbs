<div class="well">
  <h1>Service Providers</h1>

  {{#link-to 'service_providers.create'}}
    <button type="button" class="btn btn-default btn-lg">
      <span class="glyphicon glyphicon-plus"></span> Add
    </button>
  {{/link-to}}

  <ul>
   {{#each sp in model}}
      <li>
        {{#link-to 'service_provider' sp}}{{sp.name}}{{/link-to}} {{#if ../controllers.application.currentUser.admin}}| <a href="#" {{action activate sp}}>{{sp.activated_text}}</a>{{/if}}
      </li>
    {{/each}}
  </ul>
</div>

{{outlet}}
