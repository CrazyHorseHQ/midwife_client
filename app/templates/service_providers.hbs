<div class="well">
  <h1>Service Providers</h1>

  {{#link-to 'service_providers.create'}}
    <button type="button" class="btn btn-default btn-lg">
      <span class="glyphicon glyphicon-plus"></span> Add
    </button>
  {{/link-to}}

  <ul>
   {{#each model}}
      <li>{{#link-to 'service_provider' this}}{{name}}{{/link-to}} | <a href="#" {{action activate this}}>{{activated_text}}</a></li>
    {{/each}}
  </ul>
</div>

{{outlet}}
