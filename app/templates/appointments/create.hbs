<h1>Add Appointment</h1>

{{#if controllers.appointment.model.errors.messages}}
  {{#each controllers.appointment.model.errors.messages}}
    <div class="error">
      {{this}}
    </div>
  {{/each}}
{{/if}}

{{#em-form model=model}}
  {{em-input property="appointment_category_id" label="Category" placeholder="Select a category..."}}
  {{em-input property="date" label="Date" placeholder="YYYY-MM-DD"}}
  {{em-input property="time" label="Time" placeholder="HH:MM:SS"}}
  {{em-input property="service_provider_id" label="Service Provider" placeholder="Select service provider name..."}}
  {{em-input property="service_user_id" label="Service User" placeholder="Select a service user"}}
  {{em-input property="priority" label="Priority" placeholder="Other|Emergency"}}
  {{em-input property="visit_type" label="Time" placeholder="Ante- or Post-natal"}}
{{/em-form}}
