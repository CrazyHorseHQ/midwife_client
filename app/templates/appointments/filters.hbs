<div class="btn-toolbar" role="toolbar">
  <div class="btn-group">
    {{#each visit_types}}
      <button
        {{action 'filterByVisitType' this.id}}
        type="button"
        {{bind-attr class=":btn :btn-default this.selected:btn-info"}}>
          {{this.name}}
      </button>
    {{/each}}
  </div>
  <div class="btn-group">
    {{#each priorities}}
      <button
        {{action 'filterByPriority' this.id}}
        type="button"
        {{bind-attr class=":btn :btn-default this.selected:btn-info"}}>
          {{this.name}}
      </button>
    {{/each}}
  </div>
  <div class="btn-group">
    {{#each tags}}
      <button
        {{action 'filterByTag' this.id}}
        type="button"
        class="btn btn-default
        {{bind-attr class=":btn :btn-default this.selected:btn-info"}}>
          {{this.name}}
      </button>
    {{/each}}
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      {{#if selectedSP}}
        {{selectedSPName}}
      {{else}}
        Service Provider
      {{/if}}
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      {{#each service_providers}}
        <li><a href="#" {{action filterBySP this.id}}>{{this.name}}</a></li>
      {{/each}}
    </ul>
  </div>
</div>
<br/>
<div class="btn-toolbar" role="toolbar">
  <div class="btn-group">
    {{#each dates}}
      <button
        {{action 'filterByDate' this.date}}
        type="button"
        {{bind-attr class=":btn :btn-default this.selected:btn-info"}}>
          {{this.date}}
      </button>
    {{/each}}
  </div>
</div>
