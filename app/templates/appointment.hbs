<div class="panel panel-info">
  <div class="panel-heading">
    {{model.service_user.personal_fields.name}}
    <span class="glyphicon glyphicon-phone"></span>
    {{model.service_user.personal_fields.mobile_phone}}
    {{model.calendarDateTime}}
    {{#if this.isEmergency}}
      <span class="label label-danger">
        Emergency
      </span>&nbsp;
    {{/if}}
    <div class="appointment-tags selected-tags btn-group btn-group-xs">
      {{#each selectedTags}}
          <button {{action 'untag' this.id}} type="button" class="btn btn-small btn-success">
            {{this.name}}
          </button>
      {{/each}}
    </div>
    <div class="appointment-tags btn-group btn-group-xs">
      {{#each remainingTags}}
          <button {{action 'tag' this.id}} type="button" class="btn btn-small btn-default">
            {{this.name}}
          </button>
      {{/each}}
    </div>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Address<dt>
      <dd>
        {{model.service_user.personal_fields.address}}
      </dd>
      <dt>Directions<dt>
      <dd>
        {{model.service_user.personal_fields.directions}}
      </dd>
      <dt>Contact Details</dt>
      <dd>
        <span class="glyphicon glyphicon-phone-alt"></span>
        {{model.service_user.personal_fields.home_phone}}
      </dd>
      <dt></dt>
      <dd>
      </dd>
      <dt>Visit Notes</dt>
      <dd>
        <ul>
          {{#each model.visit_logs}}
            <li>{{notes}} | {{created_at}}</li>
          {{/each}}
        </ul>
      </dd>
    </dl>
  </div>
</div>
{{#link-to 'appointment.edit' model}}Change{{/link-to}}
{{#if model.canDelete}}
  | <a href="#" {{action "delete"}}>Delete</a>
{{/if}}

{{outlet}}
