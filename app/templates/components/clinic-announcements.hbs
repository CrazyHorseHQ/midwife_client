{{#if addMode}}
  <form class="form-inline" role="form">
    <div class="form-group">
      {{input type="text" value=note placeholder="Announcement (e.g. Bring syringes)" class="form-control"}}
    </div>
    <div class="form-group">
      <label>
      {{input type="checkbox" checked=blocking class="form-control"}}
        Blocking
      </label>
    </div>
    <div class="form-group pull-right">
      <button {{action 'addAnnouncement'}} class="btn btn-sm btn-success"><span class="glyphicon glyphicon-ok"></span></button>
      <button {{action 'toggleAddMode'}} class="btn btn-sm btn-warning"><span class="glyphicon glyphicon-remove"></span></button>
    </div>
  </form>
{{else}}
  <button class="btn btn-sm btn-info" {{action 'toggleAddMode'}}><span class="glyphicon glyphicon-plus"></spna> New Announcement</button>
  </br>
  </br>
{{/if}}
{{#each filtered_list}}
  {{#if blocking}}
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-warning-sign"></span>
      {{note}}
    </div>
  {{/if}}
  {{#unless blocking}}
    <div class="alert alert-info" role="alert">
      <span class="glyphicon glyphicon-info-sign"></span>
      {{note}}
    </div>
  {{/unless}}
{{/each}}
