{{#modal-dialog action="closeModal"}}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" {{action "closeModal"}}>
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <h2 class="modal-title">Appointment Summary</h2>
  </div>
  <div class="modal-body">
    {{#with model}}
      <table class="table">
        <tr>
          <td>Service User</td>
          <td>{{service_user.personal_fields.name}}</td>
        </tr>
        <tr>
          <td>Service Provider</td>
          <td>{{service_provider.name}}</td>
        </tr>
        <tr>
          <td>Location</td>
          <td>{{clinic.name}}</td>
        </tr>
        <tr>
          <td>Date</td>
          <td>{{date}}</td>
        </tr>
        <tr>
          <td>Time</td>
          <td>{{time}}</td>
        </tr>
        <tr>
          <td>Email To</td>
          <td>{{service_user.personal_fields.email}}</td>
        </tr>
        <tr>
          <td>SMS To</td>
          <td>{{service_user.personal_fields.mobile_phone}}</td>
        </tr>
      </table>
    {{/with}}
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" {{action "closeModal"}}>Close</button>
    <button type="button" class="btn btn-primary" {{action "updateAppointment"}}>Save</button>
  </div>
{{/modal-dialog}}
