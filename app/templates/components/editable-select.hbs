{{#if isEditing}}
  {{view Ember.Select
         content=selectContent
         value=selectValue
         optionValuePath="content.value"
         optionLabelPath="content.label"
         prompt="Please select an option"
  }}
{{else}}
  {{#if isEmpty}}
    {{emptyValue}}
  {{else}}
    {{fieldContent}}
  {{/if}}
{{/if}}
