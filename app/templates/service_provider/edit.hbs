<h1>Service Provider</h1>

{{#if controllers.service_provider.model.errors.messages}}
  {{#each controllers.service_provider.model.errors.messages}}
    <div class="error">
      {{this}}
    </div>
  {{/each}}
{{/if}}

<table>
  <tbody>
    {{#each buffer}}
    <tr>
      <td>
        <strong>{{key}}:</strong>
      </td>
      <td>
        {{input value=value}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<button {{action 'save'}}>Update</button>

{{outlet}}
